// Configuration pour Prisma Postgres avec Accelerate intégré
// DATABASE_URL: URL Accelerate (avec connection pooling et cache global)
// DIRECT_DATABASE_URL: URL directe pour migrations et Prisma Studio

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")       // URL Accelerate pour les requêtes
  directUrl = env("DIRECT_DATABASE_URL") // URL directe pour les migrations
}

// Better Auth Models
model User {
  id                  String    @id @default(cuid())
  username            String
  email               String    @unique
  emailVerified       Boolean   @default(false)
  image               String?
  role                Role      @default(PLAYER)
  onboardingCompleted Boolean   @default(false)
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  teamId        String?
  team          Team?          @relation(fields: [teamId], references: [id])
  coachedTeams  Team[]         @relation("CoachToTeam")
  notifications Notification[]
  screenshots   Screenshot[]
  playerStats   PlayerStats[]

  @@map("user")
}

enum Role {
  ADMIN
  COACH
  PLAYER
}

model Team {
  id          String       @id @default(cuid())
  name        String
  image       String?
  isValidated Boolean      @default(false)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  coachId     String
  coach       User         @relation("CoachToTeam", fields: [coachId], references: [id])
  players     User[]
  invitations Invitation[]
  matches     Match[]

  @@map("team")
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id           String  @id @default(cuid())
  accountId    String
  providerId   String
  userId       String
  accessToken  String?
  refreshToken String?
  idToken      String?
  accessTokenExpiresAt DateTime?
  refreshTokenExpiresAt DateTime?
  scope        String?
  password     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("verification")
}

model Invitation {
  id        String           @id @default(cuid())
  email     String
  teamId    String
  status    InvitationStatus @default(PENDING)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  expiresAt DateTime

  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@unique([email, teamId])
  @@index([email])
  @@index([teamId])
  @@map("invitation")
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  DECLINED
  EXPIRED
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  type      NotificationType
  title     String
  message   String
  read      Boolean          @default(false)
  metadata  Json?
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, read])
  @@map("notification")
}

enum NotificationType {
  INVITATION_RECEIVED
  INVITATION_ACCEPTED
  INVITATION_DECLINED
  TEAM_VALIDATED
  PLAYER_REMOVED
  SCREENSHOT_PROCESSED
  MATCH_COMPLETED
}

model Match {
  id               String   @id @default(cuid())
  teamId           String
  opponentTeamName String?  // Nom de l'équipe adverse
  game             String   // "Black Ops 7", "Black Ops 6", "MW3", "MW2"
  gameMode         String   // "Hardpoint", "Search & Destroy", "Control", etc.
  map              String   // "Nuketown", "Raid", "Express", etc.
  result           String   // "WIN", "LOSS", "DRAW"
  teamScore        Int      // Score de notre équipe
  opponentScore    Int      // Score de l'équipe adverse

  // Métadonnées optionnelles
  season           String?
  event            String?
  matchDuration    String?
  mapNumber        Int?
  matchStatus      String?  // "completed", "in-progress"
  screenshotQuality String? // "good", "medium", "poor"

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  team             Team           @relation(fields: [teamId], references: [id], onDelete: Cascade)
  screenshots      Screenshot[]
  playerStats      PlayerStats[]

  @@index([teamId])
  @@index([createdAt])
  @@map("match")
}

model Screenshot {
  id          String           @id @default(cuid())
  matchId     String
  uploadedBy  String
  imageUrl    String
  status      ScreenshotStatus @default(PENDING)
  errorMessage String?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  match       Match          @relation(fields: [matchId], references: [id], onDelete: Cascade)
  uploader    User           @relation(fields: [uploadedBy], references: [id], onDelete: Cascade)
  playerStats PlayerStats[]

  @@index([matchId])
  @@index([uploadedBy])
  @@index([status])
  @@map("screenshot")
}

enum ScreenshotStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

model PlayerStats {
  id           String    @id @default(cuid())
  matchId      String
  playerId     String
  screenshotId String?
  playerName   String    // Nom du joueur dans le screenshot (peut différer du User.name)

  // Stats de base
  kills        Int
  deaths       Int
  assists      Int       @default(0)
  kdRatio      Float

  // Stats optionnelles selon le mode
  damage       Int?
  hillTime     String?   // Format MM:SS
  captures     Int?
  defuses      Int?
  plants       Int?
  zoneTime     String?   // Format MM:SS

  // Confiance de l'extraction AI
  confidence   String    @default("medium") // "high", "medium", "low"

  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  match        Match       @relation(fields: [matchId], references: [id], onDelete: Cascade)
  player       User        @relation(fields: [playerId], references: [id], onDelete: Cascade)
  screenshot   Screenshot? @relation(fields: [screenshotId], references: [id], onDelete: SetNull)

  @@unique([matchId, playerId])
  @@index([matchId])
  @@index([playerId])
  @@index([screenshotId])
  @@map("player_stats")
}
