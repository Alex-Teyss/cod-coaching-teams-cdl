# Database - Prisma Postgres
# DATABASE_URL: URL Accelerate de Prisma Postgres (pour les requêtes en production avec pooling et cache)
# Obtenue via: npx prisma config show database_url
DATABASE_URL="prisma://accelerate.prisma-data.net/?api_key=__YOUR_ACCELERATE_API_KEY__"

# DIRECT_DATABASE_URL: URL directe de Prisma Postgres (pour les migrations et prisma studio)
# Obtenue via: npx prisma config show direct_database_url
DIRECT_DATABASE_URL="postgresql://user:password@host.prisma-data.net:5432/database?schema=public&sslmode=require"

# Better Auth
# BETTER_AUTH_SECRET: Secret pour signer les tokens (générer avec: openssl rand -base64 32)
BETTER_AUTH_SECRET="your-secret-key-here"

# BETTER_AUTH_URL: URL de votre application
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Google OAuth (optionnel)
# Google OAuth: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Resend (Email)
# Resend API Key: https://resend.com/api-keys
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxxx"

# Email sender (doit être un domaine vérifié dans Resend)
EMAIL_FROM="COD Coaching <noreply@votredomaine.com>"

# Email de support (pour recevoir les messages du formulaire de contact)
SUPPORT_EMAIL="contact@codcoachingteams.com"

# UploadThing (File uploads)
# UploadThing: https://uploadthing.com/dashboard
UPLOADTHING_TOKEN="your-uploadthing-token"

# OpenAI (Screenshot Analysis with GPT-4o Vision)
# OpenAI API Key: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxx"
